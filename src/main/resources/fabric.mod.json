{
  "schemaVersion": 1,
  "id": "bundlescroll",
  "version": "${version}",

  "name": "Bundle Scroll",
  "description": "Allows players to cycle bundle inventory contents by using the scroll wheel in the inventory.",
  "authors": [
    "Zachary Barbanell"
  ],
  "contact": {
    "homepage": "https://github.com/zacharybarbanell",
    "sources": "https://github.com/zacharybarbanell/bundle-scroll"
  },

  "license": "MIT",
  "icon": "assets/bundlescroll/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.zacharybarbanell.bundlescroll.BundleScroll"
    ],
    "client": [
      "com.zacharybarbanell.bundlescroll.BundleScrollClient"
    ]
  },
  "mixins": [
    "bundlescroll.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": "1.19.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
